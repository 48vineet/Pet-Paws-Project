<% layout("/layouts/boilerplate") %>
    <div class="row">
        <% for (medicine of allMedicine) { %>
            <div class="show-container col-4">
                <div class="show-row">
                    <div class="show-card-new">
                        <h2 class="show-title">
                            <%= medicine.name %>
                        </h2>
                        <img src="<%= medicine.image %>" class="show-img-new" alt="pet image">
                        <div class="show-card-body">
                            <h5><strong>Description:</strong>
                                <%= medicine.description %>
                            </h5>
                            <h5><strong>Company:</strong>
                                <%= medicine.company %>
                            </h5>
                            <h5><strong>Price:</strong> $<%= medicine.price %>
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>