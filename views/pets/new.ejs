<% layout("/layouts/boilerplate") %>

<!-- Background with Animated Elements -->
<section class="min-h-screen bg-gradient-to-br from-emerald-50 to-white py-16 px-4 relative overflow-hidden">
  <!-- Floating Background Decorations -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-20 left-10 w-32 h-32 bg-emerald-200/20 rounded-full blur-2xl animate-pulse"></div>
    <div class="absolute bottom-32 right-20 w-40 h-40 bg-emerald-300/15 rounded-full blur-3xl animate-pulse delay-1000"></div>
    <div class="absolute top-1/3 right-1/4 w-24 h-24 bg-emerald-100/30 rounded-full blur-xl animate-bounce delay-500"></div>
    <div class="absolute bottom-1/4 left-1/3 w-20 h-20 bg-emerald-200/25 rounded-full blur-lg animate-ping delay-2000"></div>
  </div>

  <div class="max-w-2xl mx-auto relative">
    <!-- Animated Header -->
    <div class="text-center mb-12 opacity-0 animate-fade-in-up">
      <h2 class="text-4xl font-extrabold text-emerald-800 mb-4 tracking-tight">List Your Pet</h2>
      <div class="w-24 h-1 bg-emerald-600 mx-auto rounded-full transform scale-x-0 animate-scale-x animation-delay-300"></div>
      <p class="text-lg text-gray-600 mt-6 opacity-0 animate-fade-in-up animation-delay-600">Help your furry friend find their perfect forever home</p>
    </div>

    <!-- Main Form Container -->
    <div class="group bg-white rounded-3xl shadow-2xl border border-emerald-100 overflow-hidden transform transition-all duration-700 hover:shadow-3xl hover:-translate-y-1 hover:scale-[1.01] relative opacity-0 animate-fade-in-up animation-delay-900">
      <!-- Card Glow Effect -->
      <div class="absolute -inset-2 rounded-3xl pointer-events-none opacity-0 group-hover:opacity-100 bg-gradient-to-br from-emerald-200/30 via-white/20 to-emerald-100/30 blur-xl transition-all duration-700"></div>
      
      <div class="relative p-8 md:p-10">
        <form method="POST" action="/pets/newPet" class="space-y-8">
          <!-- Pet Name -->
          <div class="group/field opacity-0 animate-fade-in-up animation-delay-1200">
            <label for="pet[name]" class="block text-base font-bold text-emerald-700 mb-3 transform transition-all duration-300 group-hover/field:text-emerald-600">
              <span class="flex items-center gap-2">
                <span class="opacity-70 group-hover/field:opacity-100 transition-opacity group-hover/field:scale-110 transform duration-300">üêæ</span>
                Pet Name
              </span>
            </label>
            <input
              type="text"
              name="pet[name]"
              id="pet[name]"
              placeholder="Enter your pet's name"
              class="w-full px-6 py-4 bg-emerald-50 border border-emerald-200 rounded-2xl focus:ring-2 focus:ring-emerald-400 focus:border-emerald-400 focus:outline-none transition-all duration-300 hover:bg-emerald-100 hover:border-emerald-300 transform hover:scale-[1.01] focus:scale-[1.02]"
              required
            />
          </div>

          <!-- Description -->
          <div class="group/field opacity-0 animate-fade-in-up animation-delay-1500">
            <label for="pet[description]" class="block text-base font-bold text-emerald-700 mb-3 transform transition-all duration-300 group-hover/field:text-emerald-600">
              <span class="flex items-center gap-2">
                <span class="opacity-70 group-hover/field:opacity-100 transition-opacity group-hover/field:scale-110 transform duration-300">üìù</span>
                Description
              </span>
            </label>
            <textarea
              name="pet[description]"
              id="pet[description]"
              rows="4"
              placeholder="Tell us about your pet's personality, habits, and special qualities..."
              class="w-full px-6 py-4 bg-emerald-50 border border-emerald-200 rounded-2xl focus:ring-2 focus:ring-emerald-400 focus:border-emerald-400 focus:outline-none transition-all duration-300 hover:bg-emerald-100 hover:border-emerald-300 resize-none transform hover:scale-[1.01] focus:scale-[1.02]"
              required
            ></textarea>
          </div>

          <!-- Image Upload -->
          <div class="group/field opacity-0 animate-fade-in-up animation-delay-1800">
            <label for="pet[image]" class="block text-base font-bold text-emerald-700 mb-3 transform transition-all duration-300 group-hover/field:text-emerald-600">
              <span class="flex items-center gap-2">
                <span class="opacity-70 group-hover/field:opacity-100 transition-opacity group-hover/field:scale-110 transform duration-300">üì∏</span>
                Pet Photo
              </span>
            </label>
            <div class="relative">
              <input
                type="text"
                name="pet[image]"
                id="pet[image]"
                placeholder="Paste image URL or upload photo"
                class="w-full px-6 py-4 pr-14 bg-emerald-50 border border-emerald-200 rounded-2xl focus:ring-2 focus:ring-emerald-400 focus:border-emerald-400 focus:outline-none transition-all duration-300 hover:bg-emerald-100 hover:border-emerald-300 transform hover:scale-[1.01] focus:scale-[1.02]"
                required
              />
              <div class="absolute right-4 top-4 text-emerald-400 transform group-hover/field:scale-110 group-hover/field:rotate-12 transition-all duration-300">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- Price and Breed Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 opacity-0 animate-fade-in-up animation-delay-2100">
            <!-- Price -->
            <div class="group/field">
              <label for="pet[price]" class="block text-base font-bold text-emerald-700 mb-3 transform transition-all duration-300 group-hover/field:text-emerald-600">
                <span class="flex items-center gap-2">
                  <span class="opacity-70 group-hover/field:opacity-100 transition-opacity group-hover/field:scale-110 transform duration-300">üí∞</span>
                  Price ($)
                </span>
              </label>
              <input
                type="number"
                name="pet[price]"
                id="pet[price]"
                placeholder="0.00"
                min="0"
                step="0.01"
                class="w-full px-6 py-4 bg-emerald-50 border border-emerald-200 rounded-2xl focus:ring-2 focus:ring-emerald-400 focus:border-emerald-400 focus:outline-none transition-all duration-300 hover:bg-emerald-100 hover:border-emerald-300 transform hover:scale-[1.01] focus:scale-[1.02]"
                required
              />
            </div>

            <!-- Breed -->
            <div class="group/field">
              <label for="pet[breed]" class="block text-base font-bold text-emerald-700 mb-3 transform transition-all duration-300 group-hover/field:text-emerald-600">
                <span class="flex items-center gap-2">
                  <span class="opacity-70 group-hover/field:opacity-100 transition-opacity group-hover/field:scale-110 transform duration-300">üß¨</span>
                  Breed
                </span>
              </label>
              <input
                type="text"
                name="pet[breed]"
                id="pet[breed]"
                placeholder="e.g., Golden Retriever, Persian Cat"
                class="w-full px-6 py-4 bg-emerald-50 border border-emerald-200 rounded-2xl focus:ring-2 focus:ring-emerald-400 focus:border-emerald-400 focus:outline-none transition-all duration-300 hover:bg-emerald-100 hover:border-emerald-300 transform hover:scale-[1.01] focus:scale-[1.02]"
                required
              />
            </div>
          </div>

          <!-- Traits -->
          <div class="group/field opacity-0 animate-fade-in-up animation-delay-2400">
            <label for="traits" class="block text-base font-bold text-emerald-700 mb-3 transform transition-all duration-300 group-hover/field:text-emerald-600">
              <span class="flex items-center gap-2">
                <span class="opacity-70 group-hover/field:opacity-100 transition-opacity group-hover/field:scale-110 transform duration-300">‚≠ê</span>
                Pet Personality
              </span>
            </label>
            <select
              name="pet[traits]"
              id="traits"
              class="w-full px-6 py-4 bg-emerald-50 border border-emerald-200 rounded-2xl focus:ring-2 focus:ring-emerald-400 focus:border-emerald-400 focus:outline-none transition-all duration-300 hover:bg-emerald-100 hover:border-emerald-300 transform hover:scale-[1.01] focus:scale-[1.02]"
              required
            >
              <option value="" disabled selected>Select your pet's main trait</option>
              <option value="Energetic">Energetic</option>
              <option value="Friendly">Friendly</option>
              <option value="Outdoor">Outdoor Lover</option>
              <option value="Playable">Playful</option>
              <option value="Active">Active</option>
              <option value="Calm">Calm & Gentle</option>
              <option value="Protective">Protective</option>
            </select>
          </div>

          <!-- Terms & Conditions -->
          <div class="bg-emerald-50 rounded-2xl p-6 border border-emerald-100 opacity-0 animate-fade-in-up animation-delay-2700 hover:bg-emerald-100 transition-all duration-300 transform hover:scale-[1.01]">
            <div class="flex items-start gap-4">
              <input
                type="checkbox"
                name="pet[confirmation]"
                id="confirmation"
                class="mt-1 w-5 h-5 text-emerald-600 border-emerald-300 rounded focus:ring-emerald-500 focus:ring-2 transform hover:scale-110 transition-transform duration-200"
                required
              />
              <label for="confirmation" class="text-sm text-gray-700 leading-relaxed">
                I confirm that I am the rightful owner of this pet and agree to Happy Paws' 
                <a href="/terms" class="text-emerald-600 hover:text-emerald-700 font-medium underline transition-colors duration-200">terms and conditions</a>. 
                I understand that all information provided must be accurate and complete.
              </label>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="pt-6 opacity-0 animate-fade-in-up animation-delay-3000">
            <button
              type="submit"
              class="group/btn relative w-full bg-emerald-700 text-white py-5 px-8 rounded-full font-bold text-lg shadow-xl transition-all duration-500 transform hover:scale-110 hover:-translate-y-1 hover:shadow-2xl focus:outline-none focus:ring-4 focus:ring-emerald-300 overflow-hidden"
            >
              <span class="absolute inset-0 bg-gradient-to-r from-emerald-600 to-emerald-500 opacity-0 group-hover/btn:opacity-100 transition-opacity duration-500"></span>
              <span class="relative z-10 flex items-center justify-center gap-3">
                <span class="transform group-hover/btn:rotate-12 group-hover/btn:scale-125 transition-transform duration-300">üìã</span>
                List My Pet
                <span class="transform group-hover/btn:translate-x-1 transition-transform duration-300">‚Üí</span>
              </span>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<!-- Custom CSS for Advanced Animations -->
<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes scale-x {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }
  
  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }
  
  .animate-scale-x {
    animation: scale-x 0.6s ease-out forwards;
  }
  
  .animation-delay-300 {
    animation-delay: 0.3s;
  }
  
  .animation-delay-600 {
    animation-delay: 0.6s;
  }
  
  .animation-delay-900 {
    animation-delay: 0.9s;
  }
  
  .animation-delay-1200 {
    animation-delay: 1.2s;
  }
  
  .animation-delay-1500 {
    animation-delay: 1.5s;
  }
  
  .animation-delay-1800 {
    animation-delay: 1.8s;
  }
  
  .animation-delay-2100 {
    animation-delay: 2.1s;
  }
  
  .animation-delay-2400 {
    animation-delay: 2.4s;
  }
  
  .animation-delay-2700 {
    animation-delay: 2.7s;
  }
  
  .animation-delay-3000 {
    animation-delay: 3.0s;
  }
  
  .hover\:shadow-3xl:hover {
    box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.25);
  }
</style>
