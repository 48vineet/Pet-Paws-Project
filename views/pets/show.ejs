<% layout("/layouts/boilerplate") %>

<section class="max-w-6xl mx-auto py-16 px-4 relative">
  <!-- Background Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-32 h-32 bg-emerald-200/30 rounded-full blur-2xl animate-pulse"></div>
    <div class="absolute bottom-32 right-20 w-48 h-48 bg-emerald-300/20 rounded-full blur-3xl animate-pulse delay-1000"></div>
    <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-emerald-100/40 rounded-full blur-xl animate-bounce delay-500"></div>
  </div>

  <!-- Main Card Container -->
  <div class="group relative bg-white rounded-3xl shadow-2xl border border-emerald-100 overflow-hidden transition-all duration-700 hover:shadow-3xl hover:-translate-y-2 hover:scale-[1.02] md:flex backdrop-blur-sm">
    <!-- Animated Card Glow -->
    <div class="absolute -inset-3 rounded-3xl pointer-events-none opacity-0 group-hover:opacity-100 bg-gradient-to-br from-emerald-200/50 via-white/30 to-emerald-100/30 blur-xl transition-all duration-700"></div>
    
    <!-- Hero Image Section -->
    <div class="relative w-full md:w-1/2 overflow-hidden">
      <!-- Image with Advanced Effects -->
      <img 
        src="<%= pet.image %>" 
        alt="<%= pet.name %>" 
        class="w-full h-80 md:h-full object-cover transition-all duration-700 group-hover:scale-110 group-hover:rotate-1 filter group-hover:brightness-110 group-hover:contrast-105"
      />
      
      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-500"></div>
      
      <!-- Floating Status Badge -->
      <div class="absolute top-6 left-6 bg-emerald-600/90 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg transform translate-y-2 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 delay-200">
        <span class="animate-pulse">✨</span> Available Now
      </div>
      
      <!-- Interactive Love Button -->
      <div class="absolute top-6 right-6 w-12 h-12 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg transform translate-y-2 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 delay-300 hover:scale-110 hover:bg-red-50 cursor-pointer">
        <span class="text-red-500 text-xl hover:scale-125 transition-transform duration-300">♥</span>
      </div>
      
      <!-- Pet Stats Overlay -->
      <div class="absolute bottom-6 left-6 right-6 bg-white/10 backdrop-blur-md rounded-2xl p-4 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 delay-400">
        <div class="flex justify-between items-center text-white">
          <div class="text-center">
            <p class="text-xs font-medium opacity-80">Age</p>
            <p class="text-sm font-bold">2 Years</p>
          </div>
          <div class="text-center">
            <p class="text-xs font-medium opacity-80">Weight</p>
            <p class="text-sm font-bold">15 lbs</p>
          </div>
          <div class="text-center">
            <p class="text-xs font-medium opacity-80">Gender</p>
            <p class="text-sm font-bold">Female</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Content Section -->
    <div class="relative p-8 md:p-12 flex-1">
      <!-- Pet Name with Animation -->
      <h1 class="text-5xl font-extrabold text-emerald-800 mb-4 leading-tight transform transition-all duration-500 group-hover:scale-105 group-hover:text-emerald-700">
        <%= pet.name %>
        <span class="inline-block ml-2 text-2xl opacity-0 group-hover:opacity-100 transition-all duration-500 delay-200 animate-bounce">🐾</span>
      </h1>

      <!-- Description with Enhanced Typography -->
      <p class="text-xl text-gray-700 mb-8 leading-relaxed transform transition-all duration-500 group-hover:text-gray-800">
        <%= pet.description %>
      </p>

      <!-- Enhanced Details Grid -->
      <div class="grid grid-cols-2 gap-6 mb-10">
        <div class="group/item bg-emerald-50 rounded-2xl p-4 hover:bg-emerald-100 transition-all duration-300 hover:scale-105 hover:shadow-lg">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-8 h-8 bg-emerald-600 rounded-full flex items-center justify-center">
              <span class="text-white text-sm">💰</span>
            </div>
            <p class="text-sm font-bold text-emerald-700">Price</p>
          </div>
          <p class="text-2xl font-extrabold text-emerald-800 group-hover/item:scale-110 transition-transform duration-300">$<%= pet.price %></p>
        </div>
        
        <div class="group/item bg-emerald-50 rounded-2xl p-4 hover:bg-emerald-100 transition-all duration-300 hover:scale-105 hover:shadow-lg">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-8 h-8 bg-emerald-600 rounded-full flex items-center justify-center">
              <span class="text-white text-sm">🧬</span>
            </div>
            <p class="text-sm font-bold text-emerald-700">Breed</p>
          </div>
          <p class="text-lg font-semibold text-gray-800 group-hover/item:scale-110 transition-transform duration-300"><%= pet.breed %></p>
        </div>
        
        <div class="col-span-2 group/item bg-emerald-50 rounded-2xl p-4 hover:bg-emerald-100 transition-all duration-300 hover:scale-105 hover:shadow-lg">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-8 h-8 bg-emerald-600 rounded-full flex items-center justify-center">
              <span class="text-white text-sm">⭐</span>
            </div>
            <p class="text-sm font-bold text-emerald-700">Personality Traits</p>
          </div>
          <p class="text-lg font-semibold text-gray-800 group-hover/item:scale-110 transition-transform duration-300"><%= pet.traits %></p>
        </div>
      </div>

      <!-- Action Buttons with Premium Effects -->
      <div class="flex gap-4 flex-wrap">
        <a
          href="/pets/<%= pet._id %>/editPet"
          class="group/btn relative px-8 py-4 bg-emerald-700 hover:bg-emerald-800 text-white rounded-full font-bold tracking-wide shadow-xl transition-all duration-500 transform hover:scale-110 hover:-translate-y-1 hover:shadow-2xl focus:ring-4 focus:ring-emerald-300 overflow-hidden"
        >
          <span class="absolute inset-0 bg-gradient-to-r from-emerald-600 to-emerald-500 opacity-0 group-hover/btn:opacity-100 transition-opacity duration-500"></span>
          <span class="relative z-10 flex items-center gap-3">
            <span class="transform group-hover/btn:rotate-12 group-hover/btn:scale-125 transition-transform duration-300">✏️</span>
            Edit Pet Details
          </span>
        </a>
        
        <form action="/pets/<%= pet._id %>?_method=DELETE" method="POST">
          <button
            type="submit"
            class="group/btn relative px-8 py-4 bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white rounded-full font-bold tracking-wide shadow-xl transition-all duration-500 transform hover:scale-110 hover:-translate-y-1 hover:shadow-2xl focus:ring-4 focus:ring-emerald-300 overflow-hidden"
          >
            <span class="absolute inset-0 bg-gradient-to-r from-emerald-500 to-emerald-600 opacity-0 group-hover/btn:opacity-100 transition-opacity duration-500"></span>
            <span class="relative z-10 flex items-center gap-3">
              <span class="transform group-hover/btn:rotate-12 group-hover/btn:scale-125 transition-transform duration-300">📦</span>
              Archive Pet
            </span>
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Additional Info Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-emerald-100 hover:shadow-xl hover:-translate-y-1 transition-all duration-500 group/card">
      <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mb-4 group-hover/card:scale-110 group-hover/card:rotate-12 transition-all duration-300">
        <span class="text-emerald-600 text-xl">🏥</span>
      </div>
      <h3 class="text-lg font-bold text-emerald-800 mb-2">Health Certified</h3>
      <p class="text-gray-600">Vaccinated and health-checked by certified vets</p>
    </div>
    
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-emerald-100 hover:shadow-xl hover:-translate-y-1 transition-all duration-500 group/card">
      <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mb-4 group-hover/card:scale-110 group-hover/card:rotate-12 transition-all duration-300">
        <span class="text-emerald-600 text-xl">🏠</span>
      </div>
      <h3 class="text-lg font-bold text-emerald-800 mb-2">Home Ready</h3>
      <p class="text-gray-600">Trained and ready for their forever home</p>
    </div>
    
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-emerald-100 hover:shadow-xl hover:-translate-y-1 transition-all duration-500 group/card">
      <div class="w-12 h-12 bg-emerald-100 rounded-full flex items-center justify-center mb-4 group-hover/card:scale-110 group-hover/card:rotate-12 transition-all duration-300">
        <span class="text-emerald-600 text-xl">💝</span>
      </div>
      <h3 class="text-lg font-bold text-emerald-800 mb-2">Starter Kit</h3>
      <p class="text-gray-600">Free starter kit with adoption</p>
    </div>
  </div>
</section>

<!-- Custom CSS for Ultra-Advanced Effects -->
<style>
  .hover\:shadow-3xl:hover {
    box-shadow: 0 40px 80px -12px rgba(0, 0, 0, 0.25), 0 0 0 1px rgba(16, 185, 129, 0.05);
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  .backdrop-blur-sm {
    backdrop-filter: blur(8px);
  }
  
  .backdrop-blur-md {
    backdrop-filter: blur(16px);
  }
  
  /* Smooth scrolling for better experience */
  html {
    scroll-behavior: smooth;
  }
</style>
