<% layout("/layouts/boilerplate") %>

    <br>
    <br>
    <h4><b>Our Pets</b></h4>
    <br>
    <div class="button-container">
        <button class=" btn-u">All</button>
        <button class=" btn-u">Cats</button>
        <button class=" btn-u">Dogs</button>
        <button class=" btn-u">Others</button>
        <select class="dropdown">
            <option value="Name">Name</option>
            <option value="Price">Price</option>
            <option value="Age">Age</option>
        </select>
    </div>
    <br>


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 mt-3rs">

        <% for (let pets of allPets) { %>
            <div class="card-container">
                <div class="card">
                    <img src="<%= pets.image %>" alt="pet image">
                    <h5 class="pet-name">
                        <%= pets.name %>
                    </h5>
                    <p class="pet-desc">
                        <%= pets.description %>
                    </p>
                    <div class="traits-breed">
                        <a class="pet-traits" href="#">
                            <%= pets.traits %>
                        </a>
                        <a class="pet-traits" href="#">
                            <%= pets.traits %>
                        </a>
                        <a class="pet-traits" href="#">
                            <%= pets.traits %>
                        </a>
                        <a class="pet-traits" href="#">
                            <%= pets.traits %>
                        </a>
                        <a class="pet-breed" href="#">
                            <%= pets.breed %>
                        </a>
                    </div>


                    <div class="price-adopt">
                        <div class="pet-price">$<%= pets.price %>
                        </div>
                        <button class="adopt-btn">
                            <a class="adopt-anchor" href="/pets/<%= pets._id %>">Adopt Me</a>
                        </button>
                    </div>
                </div>
            </div>

            <% } %>
    </div>
    <br>
    <br>